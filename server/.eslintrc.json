{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "arrow-parens": "off",
        "array-callback-return": "off",
        "padded-blocks": "off",
        "consistent-return": "off",
        "max-len":["error", {"code": 100, "ignoreUrls": true}],
        "no-param-reassign": "off",
        "no-undef": "off",
        "no-return-await": "off",
        "class-methods-use-this": "off",
        "object-curly-spacing": ["warn", "always"],
        "eqeqeq": "off",
        "no-unused-vars": "warn",
        "no-empty-function": "warn"
    }
}
